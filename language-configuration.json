{
	"comments": {
		"lineComment": "//",
		"blockComment": [ "/*", "*/" ]
	},
	"brackets": [
		["(", ")"]
	],
	"autoClosingPairs": [
		{"open": "(", "close": ")"},
		{"open": "\"", "close": "\"", "notIn": ["string"]},
		{"open": "'", "close": "'", "notIn": ["string"]},
		{"open": "/**", "close": " */", "notIn": ["string"]}
	],
	"autoCloseBefore": ":.,=) \n\t",
	"surroundingPairs": [
		["(", ")"],
		["\"", "\""],
		["'", "'"]
	],
	"folding": {
		"markers": {
			"start": "^\\s*//\\s*#?region\\b",
			"end": "^\\s*//\\s*#?endregion\\b"
		}
	},
	"wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
	"indentationRules": {
		"increaseIndentPattern": "^((?!\\/\\/).)*(\\([^)\"'`]*))$"
	},
	"onEnterRules": [
		{
			"beforeText": "^\\s*(/\\*\\*)(.(?!\\*/))*$",
			"action": {
				"indent": "none",
				"appendText": " * "
			}
		},
		{
			"beforeText": "^\\s*\\* .*(?!\\*/).*$",
			"previousLineText": "^\\s*(/\\*\\*|\\* )(.(?!\\*/))*$",
			"action": {
				"indent": "none",
				"appendText": "* "
			}
		}
	]
}