// Issue 1 & 2: Function call expressions
func testFunctionCalls()
	// Simple function call
	myFunc()
	
	// Function call with expressions
	calculate(a + b, c * d)
	
	// Nested function calls
	outer(inner(x))
	
	// Function calls with various expressions
	process(getValue(), getOther(), 1 + 2, "string", obj.property)
	
	// Method chaining
	obj.method1().method2().method3()
	
	// Method calls after type names
	MyType.staticMethod()
	MyClass.new()
	
	// Complex nested expressions in function calls
	compute(
		calculate(a, b, c),
		transform(x, y),
		(d + e) * f,
		getValue() + getOther()
	)
	
	// Function calls with blocks as arguments
	collection.filter(block Item item
		return item.isValid()
	end).map(block Item item
		return item.transform()
	end)
end

